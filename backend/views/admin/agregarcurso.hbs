
<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar curso</h4>
            <form action="/admin/cursos/agregarcurso" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Nombre" name="nombre">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Detalles" name="detalles"></textarea>
                </div>
     
                <div class="form-group">
                    <input type="datetime-local" min="2022-06-07T00:00" max="2023-06-14T00:00" class="form-control" name="fecha_inicio">
                </div>

                <div class="form-group" >
                    <input type="datetime-local" min="2022-06-07T00:00" max="2023-06-14T00:00" class="form-control" name="fecha_hasta">
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}

        </div>
    </div> 
</div>





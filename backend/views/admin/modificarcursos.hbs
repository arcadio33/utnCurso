<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar Curso</h4>
            <form action="/admin/cursos/modificarcursos" method="post">
                <div class="form-group">
                    <input type="hidden" value="{{cursos.id}}" name="id">
                </div>
                 <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Nombre de curso" name="nombre">{{cursos.nombre}}</textarea>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="detalles" name="detalles">{{cursos.detalles}}</textarea>
                </div>
             <div class="form-group">
                    <input type="datetime-local" class="form-control" name="fecha_inicio" value="{{cursos.fecha_inicio}}">
                </div>

                <div class="form-group" >
                    <input type="datetime-local" class="form-control" name="fecha_hasta" value="{{cursos.fecha_hasta}}">
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            
            {{#if error}}
                <p>{{message}}</p>
            {{/if}}

        </div>
    </div> 
</div>

